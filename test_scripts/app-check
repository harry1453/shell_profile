helm

# API Utilities
kcl
atac

)

function check_app() {
  appName=$1
  if ! which $appName > /dev/null 2>&1; then
    echo "warning: $appName is not installed"
  fi
}

for i in "${apps[@]}"; do
  check_app $i
done
