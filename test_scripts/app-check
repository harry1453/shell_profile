#!/usr/bin/env bash

declare -a apps=(

# Basic utilities
bat
file
less
htop
neofetch
ncdu
gdu
dust
grep
sed
nnn
git
tree
eza
rg

# Editors
nano
vim
nvim
micro

# Terminal Utilities
ssh
mosh
tmux
zellij
fzf

# Shells / Scripting utilities
zsh
nu
pv
jq
yq
yj
rlwrap

# Compilers / Build Tools
gcc
make
go
cargo
jsonnet
jsonnet-lint
protoc
just

# Interpreters / REPLs
yaegi
node
#deno
bun

# Networking utilities
curl
wget
nc
bmon
arp-scan

# Database utilities
mycli
pgcli

# Compression utilities
gzip
gunzip
zip
